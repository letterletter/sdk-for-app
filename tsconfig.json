{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    // "jsx": "react",
    "module": "commonjs",
    // "outDir": "./dist",
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "es2019"
  },
  "include": [
    "src/api",
    "src/decorator"
  ],
  "exclude": ["node_modules"]
}
